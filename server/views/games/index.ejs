<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">

          <br>
          <h3>Games List</h3>
          <a class="btn btn-danger" href="/games/add" <i class="fa">Add A Game</i></a>
          <br>
          <table class="table table-striped table-hover table-bordered"> 
            <tr>
              <td class="text-center"><b>Name</b></td>
              <td class="text-center"><b>Cost</b></td>
              <td class="text-center"><b>Rating</b></td>
              <td></td>
              <td></td>
            </tr>
            
            <% for (let count = 0; count < games.length; count++) { %>

            <tr> 
              <td class="text-center"> <%= games[count].name %> </td>
              <td class="text-center"> <%= games[count].cost %> </td>
              <td class="text-center"> <%= games[count].rating %> </td>
              <td class="text-center"> <a class="btn btn-primary" href="/games/<%= games[count]._id %>" role="button"><i class="fa fa-pencil-square-o">Edit</i></a></td>
              <td class="text-center"> <a class="btn btn-danger" href="#" role="button"><i class="fa fa-trash-o">Delete</i></a></td>
            </tr>

            <% } %>

          </table>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>


